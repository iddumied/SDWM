#include <X11/xpm.h>

void setup_statuswin();

DC statuswin;
// TODO REPLEACE SBarCpuLine ua. with SBarLine
void setup_statuswin()
{
    dc.norm[ColBorder]    = getcolor(swnormbordercolor);
    dc.norm[ColBG]        = getcolor(swnormbgcolor);
    dc.norm[ColFG]        = getcolor(swnormfgcolor);
    dc.sel[ColBorder]     = getcolor(swselbordercolor);
    dc.sel[ColBG]         = getcolor(swselbgcolor);
    dc.sel[ColFG]         = getcolor(swselfgcolor);
    dc.sbar[SBarBorder]   = getcolor(swbotbordercolor);
    dc.sbar[SBarCpuLine]  = getcolor(swcpu_line_color);
    dc.sbar[SBarCpuPoint] = getcolor(swcpu_point_color);
}
